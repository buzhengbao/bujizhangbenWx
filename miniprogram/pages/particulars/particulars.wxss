/* pages/particulars/particulars.wxss */
@import '../../style/weui.wxss';
.survey{
  background-color: #8cbb19;
  height: 190rpx;
  display: flex;
}
.left{
  width: 25%;
  border-right: 1px solid;
  margin: 20rpx;
}
.nian{
  font-weight: 400;
}
.yue{
  font-size: 40rpx;
  font-weight: 700;
}
.right{
  width: 75%;
  display: flex;
  justify-content: space-around;
  padding-top: 10rpx;
}

.down{
  padding-top: 10rpx;
  font-size: 50rpx;
}
.entry{
  text-align: center;
  overflow-y: scroll;
  background-color: rgb(255, 255, 255);
  border-radius: 2rpx;
}
.title{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.39);
}
.content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.39) ;
}
.icon{
  display: flex;
  align-items: center;
}
.text{
  font-weight: bolder;
}
.inp{
  height: 110rpx;
  width: 300rpx;
}
.result{
  display: flex;
  align-items: center;
  width: 300rpx;
  font-weight: 500;
  font-size: 50rpx;
  text-align: right;
}
image{
  background-color: rgba(128, 128, 128, 0.432);
  border-radius: 100rpx;
  padding: 5rpx;
  margin: 10rpx;
  width: 75rpx;
  height: 75rpx;
}
.feet{
  display: flex;
  border-bottom: solid 2px rgba(0, 0, 0, 0.637);
  padding-bottom: 10px;
}
button{
  background-color: #8cbb19;
  color: rgb(0, 0, 0);
}